<div class="row">
                <div class="row">
                    {{#if paystatus}}
                 <div id="charge-error" class="alert alert-danger  ">
                     {{paystatus}}
                </div>
                {{/if}}
{{# each products }}
    <div class="col-sm-6 col-md-4">
{{success}}
        
        <div class="thumbnail">
            <img class="img-responsive" src="{{this.imagePath}}" alt=""></img>
              <div class="caption">
                  
        <h3>{{this.title}}</h3>
        <p>	{{this.description}}</p>

<div class="clearfix">
    <div class="price">${{this.price}}</div>
        <a href="/product/add-to-cart/{{this._id}}" class="btn btn-primary pull-right">購買</a>
    
</div>

              </div>
      
        </div>

    </div>
{{/each}}
    
</div>